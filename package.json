{
  "name": "solar",
  "version": "0.0.1",
  "author": "sena@soompay.net",
  "description": "A wallet for CRP",
  "main": "main.js",
  "scripts": {
    "prod": "webpack --mode production --config webpack.build.config.js && electron --noDevServer .",
    "dev": "electron --noDevServer .",
    "pre": "webpack --mode development --config webpack.config.js",
    "build": "webpack --config webpack.build.config.js --mode production",
    "package": "npm run build && electron-packager ./ --out=./builds --platform=all",
    "build:osx": "build --mac",
    "build:linux": "npm run build:linux32 && npm run build:linux64",
    "build:linux32": "build --linux --ia32",
    "build:linux64": "build --linux --x64",
    "build:win": "npm run build:win32 && npm run build:win64",
    "build:win32": "build --win --ia32",
    "build:win64": "build --win --x64"
  },
  "keywords": [
    "CRP",
    "wallet",
    "contract",
    "app"
  ],
  "build": {
    "productName": "solar",
    "appId": "com.electron.solar",
    "asar": true,
    "mac": {
      "target": [
        "default"
      ],
      "icon": "./resources/installer/Icon.icns"
    },
    "dmg": {
      "title": "HelloElectron",
      "icon": "./resources/installer/Icon.icns"
    },
    "win": {
      "target": [
        "zip",
        "nsis"
      ],
      "icon": "./resources/installer/Icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "zip",
        "tar.gz"
      ],
      "icon": "./resources/linuxicon"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "buildResources": "resources/installer/",
      "output": "dist/",
      "app": "."
    }
  },
  "license": "CC0-1.0",
  "devDependencies": {
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-react-css-modules": "^5.0.0",
    "bootstrap": "^4.3.0",
    "css-loader": "^2.1.0",
    "electron": "^4.0.4",
    "electron-builder": "^20.38.5",
    "electron-renderer": "^2.0.4",
    "electron-webpack": "^2.6.2",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "postcss-loader": "^3.0.0",
    "react-bootstrap": "^1.0.0-beta.5",
    "style-loader": "^0.23.1",
    "webpack": "^4.29.3",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.1.14"
  },
  "dependencies": {
    "@babel/core": "^7.2.2",
    "acorn": "^6.1.0",
    "react": "^16.8.1",
    "react-dom": "^16.8.1"
  }
}
